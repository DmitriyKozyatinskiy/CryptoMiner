{
  "name": "CryptoMiner",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "identity",
    "identity.email"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
